<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', {title: 'Listado de usuarios'}) %>
<body class="form">
    <%- include('../partials/header') %>
    
    <section class="top-nav">
        <nav class="top-nav-start breadcrumb">
            <a href="/">Inicio</a>
            <a href="/admin">Admin</a>
            <a href="/users">Usuarios</a>
        </nav>
    </section>
    
    <main class="row main-center admin-form">
        <div class="col-11 container">
            <div class="header">
                <p>Listado de usuarios</p>
                <a href="/users/create" class="btn btn-primary">Crear usuario</a>
            </div>
            <div class="row main-center">
                <!-- table titles -->
                <div class="col-11">
                    <div class="row row-title">
                        <div class="col-2 col-md-1">Foto</div>
                        <div class="col-5 col-md-3">Nombre</div>
                        <div class="col-5 col-md-3">Apellido</div>
                        <div class="col-md-3 hidden-sm">Email</div>
                        <div class="col-md-2 hidden-sm">Acciones</div>
                    </div>
                </div>
                <!-- table content -->
                <div class="col-11">
                    <% users.forEach(user => { %>
                        <div class="row row-content <%= user.category %>">
                            <div class="col-2 col-md-1 row-user-image">
                                <img src="/images/users/<%= user.image ? user.image : '' %>" onerror="this.src='/images/users/default-image.png'" alt="imagen de usuario">
                            </div>
                            <div class="col-5 col-md-3">
                                <%= user.firstname %>
                            </div>
                            <div class="col-5 col-md-3">
                                <%= user.lastname %>
                            </div>
                            <div class="col-md-3 hidden-sm">
                                <%= user.email %>
                            </div>
                            <div class="col-12 col-md-2 row-actions">
                                <a class="btn btn-icon" href="/users/<%= user.id %>">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-icon" href="/users/<%= user.id %>/edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form class="form-only-btn" action="/users/<%= user.id %>?_method=delete" method="post">
                                    <button class="btn btn-icon" type="submit">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>