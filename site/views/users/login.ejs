<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<script src="/js/validator.min.js"></script>
    <script src="/js/login-validations.js"></script>
<body class="form">
    <%- include('../partials/header') %>
    
    <main class="guest-form">
        <section class="row main-center">
            <div class="col-11 col-md-5 col-lg-4">
                <form action="/users/login" id="registerForm" method="POST"> 
                    <div class="header">
                        <p>¡Qué bueno que volviste!</p>
                        <p class="title">Ingresar</p>
                    </div>
                    <% if (locals.errors && errors.form) { %>
                        <p class="error-form"><%= errors.form.msg %></p>
                    <% } %>
                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input type="email" id="email" name="email" class="<%= locals.errors && errors.email ? 'danger' : '' %>">
                        <span class="error"><%= locals.errors && errors.email ? errors.email.msg : '' %></span>
                    </div>
                    <div class="form-group">
                        <label for="password" >Contraseña</label>
                        <input type="password" id="password" name="password"> 
                        <span class="error"><%= locals.errors && errors.password ? errors.password.msg : '' %></span>
                    </div>
                    <div class="remember row main-between cross-center">
                        <div>
                            <input type="checkbox" name="remember">
                            <label for="remember">Recordarme</label>
                        </div>
                        <div>
                            <a href="/users/recover" class="btn-cancel">Olvidó?</a>
                        </div>
                    </div>
                    <div class="controls">
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                </form>
            </div>
        </section>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>