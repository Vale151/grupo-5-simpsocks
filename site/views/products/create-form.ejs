<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header-admin') %>

    <section class="top-nav">
        <nav class="top-nav-start breadcrumb">
			<a href="/">Inicio</a>
			<a href="/admin">Admin</a>
			<a href="/products">Productos</a>
            <a href="/products/create">Nuevo</a>
        </nav>
	</section>

    <main class="main-with-form">
        <section class="row main-center ">
            <div class="col-10  col-md-8 col-lg-8 form-general">
                <form action="/products/" method="POST"  enctype="multipart/form-data">

                    <h2 class="title-forms">Nuevo Producto</h2>
                    
                    <div class="form-step-create">
                        <label for="name">Nombre</label><br> 
                        <input type="text"id="name" name="name" required placeholder="Sé creativo, pero claro." class="new-product-input">
                    </div>
                    <div class="new-product-description">
                        <label for="description" >Descripción</label><br>
                        <textarea id="description" name="description" cols="30" rows="10"placeholder="Vende tus Simpsocks!" class="new-product-input"></textarea>
                    </div>
                    <div class="form-step-create">
                        <label for="price">Precio</label><br>
                        <input type="number" id="price" name="price" required placeholder= "Introduci el valor en Pesos" class="new-product-input">   
                    </div>
                    <div class="form-step-create">
                        <label for="discount">Descuento</label><br>
                        <input type="number" id="discount" name="discount" placeholder= "ingresa el descuento de tus simpsocks" class="new-product-input">   
                    </div>
                    <div class="form-step-create">
                        <label for="size" >Talles</label><br>
                        <select name="Type" id="Type" class="new-product-input">
                            <option value="1">Small</option>
                            <option value="2">Medium</option>
                            <option value="3">Large</option>
                        </select>
                    </div>
                    <div class="form-step-create">
                        <label for="type" >Tipo de Simpsock</label><br>
                        <select name="Type" id="Type" class="new-product-input">
                            <option value="1">Soquete</option>
                            <option value="2">Medias</option>
                            <option value="3">Bucanera</option>
                        </select>
                    </div>
                    <div class="form-step-create">
                        <label for="image" >Subí las fotos de tus Simpsocks</label><br>
                        <input type="file" id="image" name="image" multiple style="border: none;"> 
                    </div>
                    <div class="form-step-create">
                        <label for="categories">Categorías</label>
                        <div class="row">
                            <% categories.forEach(category => { %>
                                <div class="col-6 col-md-3"><input type="checkbox" name="categories" id="<%= category.id %>" value=<%= category.id %>><span><%= category.name %></span></div>
                            <% }) %>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class=" btn btn-primary">Crear Producto</button>
                    </div>
                </form>
            </div>
        </section>
    </main>

    <%- include("../partials/footer")%>
</body>
</html>