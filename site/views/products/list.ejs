<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', {title: 'Listado de usuarios'}) %>
<body>
	<%- include('../partials/header-admin') %>

	<section class="top-nav">
        <nav class="top-nav-start breadcrumb">
			<a href="/">Inicio</a>
			<a href="/admin">Admin</a>
			<a href="/products">Productos</a>
        </nav>
	</section>
	
	<main class="container admin-wrapper">
		<div class="row main-center">
			<div class="col-11">
				<h2 class="title">Listado de Productos</h2>
				<a href="/products/create" class="btn btn-primary">Crear Producto</a>
			</div>
			<!-- table titles -->
			<div class="col-11 hidden-sm">
				<div class="row row-title">
					<div class="col-md-1 hidden-sm">Imagen</div>
					<div class="col-4 col-md-3">Nombre</div>
					<div class="col-4 col-md-2">Precio</div>
					<div class="col-md-1 hidden-sm">Talle</div>
					<div class="col-md-1 hidden-sm">Tipo</div>
					<div class="col-md-2 hidden-sm">Categor√≠as</div>
					<div class="col-4 col-md-2">Acciones</div>
				</div>
			</div>
			<!-- table content -->
			<div class="col-11">
				<% products.forEach(product => { %>
					<div class="row cross-center">
						<div class="col-md-1 hidden-sm row-user-image">
							<img src="/images/products/<%= product.images && product.images.length > 0 ? product.images[0].name : '' %>" onerror="this.src='/images/products/default-image.png'" alt="imagen de usuario">
						</div>
						<div class="col-4 col-md-3">
							<%= product.name %>
						</div>
						<div class="col-4 col-md-2">
							 $ <%= product.price %>
						</div>
						<div class="col-md-1 hidden-sm">
							<%= product.size.name %>
						</div>
						<div class="col-md-1 hidden-sm">
							<%= product.type.name %>
						</div>
						<div class="col-md-2 hidden-sm labels">
							<% product.categories.forEach(category => { %>
								<span><%= category.name %></span>  
							<% }) %>
						</div>
						<div class="col-4 col-md-2">
							<a class="btn btn-icon" href="/products/<%= product.id %>"><i class="fas fa-eye"></i></a>
							<a class="btn btn-icon" href="/products/<%= product.id %>/edit"><i class="fas fa-edit"></i></a>
							<form class="form-only-btn" action="/products/<%= product.id %>?_method=delete" method="post">
								<button class="btn btn-icon" type="submit"><i class="fas fa-trash"></i></button>
							</form>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</main>
	
	<%- include('../partials/footer') %>
</body>	
</html>