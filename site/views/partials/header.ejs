<header>
    <div class="header-start">
        <a href="/">
            <img src="/images/logo.png" alt="Logo Simpsocks">
            <h2><span class="ultra">simp</span>socks</h2>
        </a>
    </div>
    <div id="searcher" class="header-center">
        <form id="searchform" class="search-form" role="search" method="get" action="/products/find">
            <label class="search-label" for="query">Buscar</label>
            <input class="search-field" type="search" id="query" name="query" placeholder="ej. rosquillas" value="<%= typeof(query) == 'undefined' ? '' : query %>">
            <button class="btn-search" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
    <div class="header-end">
        <nav id="main-nav" class="main-nav">
            <ul>
                <% if (locals.auth && auth.category == 1) { %>
                <!-- Aparece con session de tipo USER -->
                <li>
                    <a href="/products/cart">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Mi carrito</span>
                    </a>
                </li>
                <li>
                    <a href="/users/favorites">
                        <i class="far fa-heart"></i>
                        <span>Favoritos</span>
                    </a>
                </li>
                <li>
                    <a href="/users/profile">
                        <i class="far fa-user"></i>
                        <span><%= auth.name %></span>
                    </a>
                </li>
                <li>
                    <form action="/users/logout" method="POST">
                        <button type="submit">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Cerrar Sesión</span>
                        </button>
                    </form>
                </li>
                <% } else if (locals.auth && auth.category == 2) { %>
                <!-- Aparece con session de tipo ADMIN -->
                <li>
                    <a href="/dashboard/">
                        <i class="fas fa-chart-line"></i>
                        <span>Panel</span>
                    </a>
                </li>
                <li>
                    <a href="/users/">
                        <i class="fas fa-user-friends"></i>
                        <span>Usuarios</span>
                    </a>
                </li>
                <li>
                    <a href="/products/">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Productos</span>
                    </a>
                </li>
                <li>
                    <a href="/categories/">
                        <i class="fas fa-folder"></i>
                        <span>Categorías</span>
                    </a>
                </li>
                <li>
                    <a href="/users/profile">
                        <i class="far fa-user"></i>
                        <span><%= auth.name %></span>
                    </a>
                </li>
                <li>
                    <form action="/users/logout" method="POST">
                        <button type="submit">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Cerrar Sesión</span>
                        </button>
                    </form>
                </li>
                <% } else { %>
                <!-- Aparece SIN SESIÓN -->
                <li>
                    <a href="/products/cart">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Mi carrito</span>
                    </a>
                </li>
                <li>
                    <a href="/users/register">
                        <i class="fas fa-user-plus"></i>
                        <span>Registrarme</span>
                    </a>
                </li>
                <li>
                    <a href="/users/login">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Iniciar Sesión</span>
                    </a>
                </li>
                <% } %>
            </ul>
        </nav>
    </div>
    <div class="mobile-actions">
        <button id="search-opener" class="closed" onclick="searchFunction()">
            <div class="show-search">
                <i class="fas fa-search"></i>
            </div>
            <div class="close-search">
                <i class="fas fa-times"></i>
            </div>
        </button>
        <button id="nav-opener" class="closed" onclick="navFunction()">
            <div class="show-nav">
                <i class="fas fa-bars"></i>
            </div>
            <div class="close-nav">
                <i class="fas fa-times"></i>
            </div>
        </button>
    </div>
</header>
<script src="/js/mobile.js"></script>