<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', {title: 'Listado de categorías'}) %>
<body>
    <%- include('../partials/header') %>
    
    <section class="top-nav">
        <nav class="top-nav-start breadcrumb">
            <a href="/">Inicio</a>
            <a href="/admin">Admin</a>
            <a href="/categories">Categorías</a>
        </nav>
    </section>
    
    <main class="container categories-wrapper main-with-form">
        <div class="row main-center col-11 form-general">
            <div class="col-11 title-forms">
                <h2 class="title ">Listado de categorías</h2>
                <a href="/categories/create" class="btn btn-primary">Crear categoría</a>
            </div>
            <!-- table titles -->
            <div class="col-11">
                <div class="row row-title">
                    <div class="col-6 ">Nombre</div>
                    <div class="col-6 ">Acciones</div>
                </div>
            </div>
            <!-- table content -->
            <div class="col-11 ">
                <% categories.forEach(category => { %>
                    <div class="row cross-center admin-list-step">
                        <div class="col-6 col-md-6">
                            <%= category.name %>
                        </div>
                        <div class="col-6 col-md-6">
                            <a class="btn btn-icon" href="/categories/<%= category.id %>"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-icon" href="/categories/<%= category.id %>/edit"><i class="fas fa-edit"></i></a>
                            <form class="form-only-btn" action="/categories/<%= category.id %>?_method=delete" method="post">
                                <button class="btn btn-icon" type="submit"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>